<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE themes PUBLIC "-//www.matthiasmann.de//TWL-Theme//EN" "http://hg.l33tlabs.org/twl/raw-file/tip/src/de/matthiasmann/twl/theme/theme.dtd">

<themes>
    <include filename="cursors.xml"/>
    <include filename="gui_base.xml"/>
    <include filename="simple.xml"/>

    <textures file="gui.png" format="RGBA">
        <texture name="checkerboard" x="56" y="106" width="8" height="8" tiled="true"/>
        <texture name="-icon-moveup" x="74" y="19" width="12" height="8" center="true"/>
        <texture name="-icon-movedown" x="87" y="19" width="12" height="8" center="true"/>

        <alias name="textureviewer.background" ref="checkerboard" border="64" inset="64"/>

        <alias name="button.opDeleteNode.overlay" ref="removebutton.overlay"/>
        <alias name="button.opNewNode.overlay" ref="addbutton.overlay"/>

        <composed name="button.opMoveNodeUp.overlay">
            <select>
                <alias ref="-icon-moveup" if="disabled" tint="#6fff"/>
                <alias ref="-icon-moveup" if="armed" inset="1,1,-1,-1"/>
                <alias ref="-icon-moveup"/>
            </select>
            <alias ref="vbutton.overlay"/>
        </composed>

        <composed name="button.opMoveNodeDown.overlay">
            <select>
                <alias ref="-icon-movedown" if="disabled" tint="#6fff"/>
                <alias ref="-icon-movedown" if="armed" inset="1,1,-1,-1"/>
                <alias ref="-icon-movedown"/>
            </select>
            <alias ref="vbutton.overlay"/>
        </composed>

    </textures>

    <theme name="themetreepane" ref="dialoglayout">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>0,0,5,0</border></param>
        <theme name="scrollpane" ref="scrollpane">
            <param name="background"><image>-borderC</image></param>
            <param name="border"><border>background.border</border></param>
            <theme name="treetable" ref="table">
                <param name="columnWidths"><map>
                    <param name="1"><int>80</int></param>
                </map></param>
            </theme>
            <theme name="table" ref="table"/>
        </theme>
        <theme name="collapsiblepanel" ref="dialoglayout">
            <param name="border"><border>5,0</border></param>
            <theme name="arrow" ref="-defaults">
                <param name=""><image>collapsiblepanel.arrowH.*</image></param>
                <param name="tooltip"><string>Toggle tree editing buttons </string></param>
                <param name="minWidth"><int>12</int></param>
                <param name="maxHeight"><int>32767</int></param>
            </theme>
            <param name="namedGaps"><map>
                <param name="title-content"><gap>0</gap></param>
            </map></param>
            
            <theme name="contentcontainer" ref="-defaults">
                <theme name="boxlayout" ref="-defaults">
                    <param name="alignment"><enum type="alignment">center</enum></param>
                    <param name="spacing"><int>2</int></param>
                    <theme name="opMoveNodeUp" ref="button">
                        <param name=""><image>button.opMoveNodeUp.*</image></param>
                        <param name="tooltip"><string>Moves the selected node upwards</string></param>
                    </theme>
                    <theme name="opMoveNodeDown" ref="button">
                        <param name=""><image>button.opMoveNodeDown.*</image></param>
                        <param name="tooltip"><string>Moves the selected node downwards</string></param>
                    </theme>
                    <theme name="opDeleteNode" ref="button">
                        <param name=""><image>button.opDeleteNode.*</image></param>
                        <param name="tooltip"><string>Deletes the selected node</string></param>
                    </theme>
                    <theme name="opNewNode" ref="button">
                        <param name=""><image>button.opNewNode.*</image></param>
                        <param name="tooltip"><string>Creates a new child node</string></param>
                    </theme>
                </theme>
            </theme>
        </theme>
        <theme name="" ref="*"/>
    </theme>
    
    <theme name="opNewNode-popupMenu" ref="-defaults">
        <param name="background"><image>frame.background</image></param>
        <param name="border"><border>5</border></param>

        <theme name="opNewNodeTexture" ref="popupMenuButton">
            <param name="text"><string>Create a new "texture" node</string></param>
        </theme>
        <theme name="opNewNodeHsplit" ref="popupMenuButton">
            <param name="text"><string>Create a new "hsplit" node</string></param>
        </theme>
        <theme name="opNewNodeVsplit" ref="popupMenuButton">
            <param name="text"><string>Create a new "vsplit" node</string></param>
        </theme>
        <theme name="opNewNodeHvsplit" ref="popupMenuButton">
            <param name="text"><string>Create a new "hvsplit" node</string></param>
        </theme>
    </theme>

    <theme name="confirmationDlg-opDeleteNode" ref="-defaults">
        <param name="background"><image>frame.background</image></param>
        <param name="border"><border>20</border></param>
        <theme name="dialoglayout" ref="dialoglayout">
            <theme name="msg" ref="label">
                <param name="text"><string>Delete the selected node ?</string></param>
            </theme>
            <theme name="btnOK" ref="button">
                <param name="text"><string>Delete</string></param>
            </theme>
            <theme name="btnCancel" ref="button">
                <param name="text"><string>Cancel</string></param>
            </theme>
        </theme>
    </theme>

    <theme name="propertyEditor" ref="scrollpane">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>background.border</border></param>

        <theme name="propertypanel" ref="dialoglayout">
            <param name="border"><border>5</border></param>

            <theme name="collapsiblepanel" ref="dialoglayout">
                <param name=""><image>collapsiblepanel.*</image></param>
                <param name="border"><border>background.border</border></param>
                <theme name="arrow" ref="-defaults">
                    <param name=""><image>collapsiblepanel.arrow.*</image></param>
                </theme>
                <theme name="title" ref="label"/>
                <theme name="active" ref="checkbox"/>
                <param name="namedGaps"><map>
                    <param name="title-content"><gap>5</gap></param>
                </map></param>

                <theme name="contentcontainer" ref="-defaults">
                    <theme name="" ref="*"/>
                    <theme name="boolean" ref="togglebutton"/>
                    <theme name="colorselector" ref="colorselector">
                        <theme name="colorarea1d" merge="true">
                            <param name="background"><image>-borderC</image></param>
                            <param name="border"><border>2</border></param>
                        </theme>
                        <theme name="colorarea2d" merge="true">
                            <param name="background"><image>-borderC</image></param>
                            <param name="border"><border>2</border></param>
                        </theme>
                    </theme>

                    <theme name="conditioneditor" ref="dialoglayout">
                        <theme name="condition-none" ref="radiobutton">
                            <param name="text"><string>None</string></param>
                        </theme>
                        <theme name="condition-if" ref="radiobutton">
                            <param name="text"><string>If</string></param>
                        </theme>
                        <theme name="condition-unless" ref="radiobutton">
                            <param name="text"><string>Unless</string></param>
                        </theme>
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="recteditor" ref="dialoglayout">
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="weightseditor" ref="dialoglayout">
                        <theme name="removebutton" ref="vbutton">
                            <param name=""><image>removebutton.*</image></param>
                            <param name="tooltip"><string>Remove this weight</string></param>
                        </theme>
                        <theme name="addbutton" ref="button">
                            <param name=""><image>addbutton.*</image></param>
                            <param name="tooltip"><string>Add a new weight</string></param>
                        </theme>
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="spliteditor" ref="dialoglayout">
                        <theme name="removebutton" ref="vbutton">
                            <param name=""><image>removebutton.*</image></param>
                            <param name="tooltip"><string>Remove this split position</string></param>
                        </theme>
                        <theme name="addbutton" ref="button">
                            <param name=""><image>addbutton.*</image></param>
                            <param name="tooltip"><string>Add a new split position</string></param>
                        </theme>
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="hotspoteditor" ref="dialoglayout">
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="bordereditor" ref="dialoglayout">
                        <theme name="" ref="*"/>
                    </theme>
                </theme>
            </theme>
        </theme>
    </theme>


    <theme name="previewpane" ref="dialoglayout">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>0</border></param>
        <theme name="previewwidget" ref="-defaults">
            <param name="background"><image>black</image></param>
<!--        <param name="mouseCursor"><cursor>cursor.none</cursor></param> -->
            <param name="maxWidth"><int>32767</int></param>
            <param name="maxHeight"><int>32767</int></param>
        </theme>
        <theme name="errorDisplay" ref="label">
            <param name="maxWidth"><int>32767</int></param>
        </theme>
        <theme name="" ref="*"/>
    </theme>

    <theme name="previewExceptionPopup" ref="-defaults">
        <param name="background"><image>frame.background</image></param>
        <param name="border"><border>20</border></param>
        <theme name="dialoglayout" ref="dialoglayout">
            <theme name="scrollpane" ref="scrollpane">
                <theme name="" ref="*"/>
            </theme>
            <theme name="" ref="*"/>
        </theme>
    </theme>

    <theme name="textureviewerpane" ref="dialoglayout">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>background.border</border></param>
        
        <theme name="linkZoomFactors" ref="togglebutton">
            <param name="text"><string>&lt;-&gt;</string></param>
            <param name="tooltip"><string>Link X and Y zoom factors</string></param>
        </theme>
        <theme name="showCompleteTexture" ref="togglebutton">
            <param name="text"><string>ALL</string></param>
            <param name="tooltip"><string>Show complete texture instead of selected rect</string></param>
        </theme>
        <theme name="scrollpane" ref="scrollpane">
            <theme name="textureviewer" ref="-defaults">
                <param name="background"><image>textureviewer.background</image></param>
                <param name="border"><border>background.border</border></param>
            </theme>
        </theme>
        <theme name="zoomadjuster" ref="valueadjuster">
            <param name="maxWidth"><int>0</int></param>
        </theme>
        <theme name="" ref="*"/>
    </theme>
</themes>