<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE themes PUBLIC "-//www.matthiasmann.de//TWL-Theme//EN" "http://hg.l33tlabs.org/twl/raw-file/tip/src/de/matthiasmann/twl/theme/theme.dtd">

<themes>
    <include filename="cursors.xml"/>
    <include filename="gui_base.xml"/>
    <include filename="simple.xml"/>

    <theme name="themetreepane" ref="dialoglayout">
        <theme name="scrollpane" ref="scrollpane">
            <param name="background"><image>-borderC</image></param>
            <param name="border"><border>background.border</border></param>
            <theme name="treetable" ref="table">
                <param name="columnWidths"><map>
                    <param name="1"><int>80</int></param>
                </map></param>
            </theme>
            <theme name="table" ref="table"/>
        </theme>
        <theme name="" ref="*"/>
    </theme>

    <theme name="propertyEditor" ref="scrollpane">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>background.border</border></param>

        <theme name="propertypanel" ref="dialoglayout">
            <param name="border"><border>5</border></param>

            <theme name="collapsiblepanel" ref="dialoglayout">
                <param name=""><image>collapsiblepanel.*</image></param>
                <param name="border"><border>background.border</border></param>
                <theme name="arrow" ref="-defaults">
                    <param name=""><image>collapsiblepanel.arrow.*</image></param>
                </theme>
                <theme name="title" ref="label"/>
                <theme name="active" ref="checkbox"/>

                <theme name="contentcontainer" ref="-defaults">
                    <theme name="" ref="*"/>
                    <theme name="boolean" ref="togglebutton"/>
                    <theme name="colorselector" ref="colorselector">
                        <theme name="colorarea1d" merge="true">
                            <param name="background"><image>-borderC</image></param>
                            <param name="border"><border>2</border></param>
                        </theme>
                        <theme name="colorarea2d" merge="true">
                            <param name="background"><image>-borderC</image></param>
                            <param name="border"><border>2</border></param>
                        </theme>
                    </theme>

                    <theme name="conditioneditor" ref="dialoglayout">
                        <theme name="condition-none" ref="radiobutton">
                            <param name="text"><string>None</string></param>
                        </theme>
                        <theme name="condition-if" ref="radiobutton">
                            <param name="text"><string>If</string></param>
                        </theme>
                        <theme name="condition-unless" ref="radiobutton">
                            <param name="text"><string>Unless</string></param>
                        </theme>
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="recteditor" ref="dialoglayout">
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="weightseditor" ref="dialoglayout">
                        <theme name="removebutton" ref="vbutton">
                            <param name=""><image>removebutton.*</image></param>
                            <param name="tooltip"><string>Remove this weight</string></param>
                        </theme>
                        <theme name="addbutton" ref="button">
                            <param name=""><image>addbutton.*</image></param>
                            <param name="tooltip"><string>Add a new weight</string></param>
                        </theme>
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="spliteditor" ref="dialoglayout">
                        <theme name="removebutton" ref="vbutton">
                            <param name=""><image>removebutton.*</image></param>
                            <param name="tooltip"><string>Remove this split position</string></param>
                        </theme>
                        <theme name="addbutton" ref="button">
                            <param name=""><image>addbutton.*</image></param>
                            <param name="tooltip"><string>Add a new split position</string></param>
                        </theme>
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="hotspoteditor" ref="dialoglayout">
                        <theme name="" ref="*"/>
                    </theme>

                    <theme name="bordereditor" ref="dialoglayout">
                        <theme name="" ref="*"/>
                    </theme>
                </theme>
            </theme>
        </theme>
    </theme>


    <theme name="previewpane" ref="dialoglayout">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>0</border></param>
        <theme name="previewwidget" ref="-defaults">
            <param name="background"><image>black</image></param>
<!--        <param name="mouseCursor"><cursor>cursor.none</cursor></param> -->
            <param name="maxWidth"><int>32767</int></param>
            <param name="maxHeight"><int>32767</int></param>
        </theme>
        <theme name="errorDisplay" ref="label">
            <param name="maxWidth"><int>32767</int></param>
        </theme>
        <theme name="" ref="*"/>
    </theme>

    <theme name="previewExceptionPopup" ref="-defaults">
        <param name="background"><image>-borderC</image></param>
        <param name="border"><border>background.border</border></param>
        <theme name="dialoglayout" ref="dialoglayout">
            <theme name="scrollpane" ref="scrollpane">
                <theme name="" ref="*"/>
            </theme>
            <theme name="" ref="*"/>
        </theme>
    </theme>

    <theme name="textureviewerpane" ref="dialoglayout">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>background.border</border></param>
        
        <theme name="linkZoomFactors" ref="togglebutton">
            <param name="text"><string>&lt;-&gt;</string></param>
            <param name="tooltip"><string>Link X and Y zoom factors</string></param>
        </theme>
        <theme name="showCompleteTexture" ref="togglebutton">
            <param name="text"><string>ALL</string></param>
            <param name="tooltip"><string>Show complete texture instead of selected rect</string></param>
        </theme>
        <theme name="scrollpane" ref="scrollpane">
            <theme name="textureviewer" ref="-defaults">
                <param name="background"><image>textureviewer.background</image></param>
                <param name="border"><border>background.border</border></param>
            </theme>
        </theme>
        <theme name="zoomadjuster" ref="valueadjuster"/>
        <theme name="" ref="*"/>
    </theme>
</themes>