        <texture name="-area2L"  x="14" y="0" width="5" height="18"/>
        <texture name="-area2F"  x="18" y="0" width="1" height="18"/>
        <texture name="-area2CR" x="18" y="0" width="3" height="18"/>
        <texture name="-area2CL" x="20" y="0" width="3" height="18"/>
