        <texture name="-area3CR" x="32" y="0" width="3" height="18"/>
        <texture name="-area3CL" x="34" y="0" width="3" height="18"/>
        <texture name="-area3R"  x="36" y="0" width="5" height="18"/>

        <texture name="-area4L"  x="42" y="0" width="5" height="18"/>
        <texture name="-area4F"  x="46" y="0" width="1" height="18"/>
        <texture name="-area4CR" x="46" y="0" width="3" height="18"/>
        <texture name="-area4CL" x="48" y="0" width="3" height="18"/>
        <texture name="-area4R"  x="50" y="0" width="5" height="18"/>

        <texture name="-area5L"  x="56" y="0" width="5" height="18"/>
        <texture name="-area5F"  x="60" y="0" width="1" height="18"/>
        <texture name="-area5CR" x="60" y="0" width="3" height="18"/>
        <texture name="-area5CL" x="62" y="0" width="3" height="18"/>
        <texture name="-area5R"  x="64" y="0" width="5" height="18"/>

        <texture name="-area6L"  x="70" y="0" width="5" height="18"/>
        <texture name="-area6F"  x="74" y="0" width="1" height="18"/>
        <texture name="-area6CR" x="74" y="0" width="3" height="18"/>
        <texture name="-area6CL" x="76" y="0" width="3" height="18"/>
        <texture name="-area6R"  x="78" y="0" width="5" height="18"/>

        <texture name="-outlineL"  x="126" y="0" width="3" height="18"/>
        <texture name="-outlineF"  x="129" y="0" width="1" height="18"/>
        <texture name="-outlineCR" x="130" y="0" width="1" height="18"/>
        <texture name="-outlineCL" x="130" y="0" width="1" height="18"/>
        <texture name="-outlineR"  x="132" y="0" width="3" height="18"/>

        <grid name="area1L" weightsX="0,1" weightsY="1">
            <alias ref="-area1L"/>
            <alias ref="-area1F"/>
        </grid>
        <grid name="area1C" weightsX="0,1" weightsY="1">
            <alias ref="-area1CL"/>
            <alias ref="-area1F"/>
        </grid>
        <grid name="area1R" weightsX="0,1,0" weightsY="1">
            <alias ref="-area1CL"/>
            <alias ref="-area1F"/>
            <alias ref="-area1R"/>
        </grid>
        <grid name="area1X" weightsX="0,1,0" weightsY="1">
            <alias ref="-area1L"/>
            <alias ref="-area1F"/>
            <alias ref="-area1R"/>
        </grid>

        <grid name="area2L" weightsX="0,1" weightsY="1">
            <alias ref="-area2L"/>
            <alias ref="-area2F"/>
        </grid>
        <grid name="area2C" weightsX="0,1" weightsY="1">
            <alias ref="-area2CL"/>
            <alias ref="-area2F"/>
        </grid>
        <grid name="area2R" weightsX="0,1,0" weightsY="1">
            <alias ref="-area2CL"/>
            <alias ref="-area2F"/>
            <alias ref="-area2R"/>
        </grid>
        <grid name="area2X" weightsX="0,1,0" weightsY="1">
            <alias ref="-area2L"/>
            <alias ref="-area2F"/>
            <alias ref="-area2R"/>
        </grid>

        <grid name="area3L" weightsX="0,1" weightsY="1">
            <alias ref="-area3L"/>
            <alias ref="-area3F"/>
        </grid>
        <grid name="area3C" weightsX="0,1" weightsY="1">
            <alias ref="-area3CL"/>
            <alias ref="-area3F"/>
        </grid>
        <grid name="area3R" weightsX="0,1,0" weightsY="1">
            <alias ref="-area3CL"/>
            <alias ref="-area3F"/>
            <alias ref="-area3R"/>
        </grid>
        <grid name="area3X" weightsX="0,1,0" weightsY="1">
            <alias ref="-area3L"/>
            <alias ref="-area3F"/>
            <alias ref="-area3R"/>
        </grid>

        <grid name="area4L" weightsX="0,1" weightsY="1">
            <alias ref="-area4L"/>
            <alias ref="-area4F"/>
        </grid>
        <grid name="area4C" weightsX="0,1" weightsY="1">
            <alias ref="-area4CL"/>
            <alias ref="-area4F"/>
        </grid>
        <grid name="area4R" weightsX="0,1,0" weightsY="1">
            <alias ref="-area4CL"/>
            <alias ref="-area4F"/>
            <alias ref="-area4R"/>
        </grid>
        <grid name="area4X" weightsX="0,1,0" weightsY="1">
            <alias ref="-area4L"/>
            <alias ref="-area4F"/>
            <alias ref="-area4R"/>
        </grid>

        <grid name="area5L" weightsX="0,1" weightsY="1">
            <alias ref="-area5L"/>
            <alias ref="-area5F"/>
        </grid>
        <grid name="area5C" weightsX="0,1" weightsY="1">
            <alias ref="-area5CL"/>
            <alias ref="-area5F"/>
        </grid>
        <grid name="area5R" weightsX="0,1,0" weightsY="1">
            <alias ref="-area5CL"/>
            <alias ref="-area5F"/>
            <alias ref="-area5R"/>
        </grid>
        <grid name="area5X" weightsX="0,1,0" weightsY="1">
            <alias ref="-area5L"/>
            <alias ref="-area5F"/>
            <alias ref="-area5R"/>
        </grid>
        
        <grid name="area6L" weightsX="0,1" weightsY="1">
            <alias ref="-area6L"/>
            <alias ref="-area6F"/>
        </grid>
        <grid name="area6C" weightsX="0,1" weightsY="1">
            <alias ref="-area6CL"/>
            <alias ref="-area6F"/>
        </grid>
        <grid name="area6R" weightsX="0,1,0" weightsY="1">
            <alias ref="-area6CL"/>
            <alias ref="-area6F"/>
            <alias ref="-area6R"/>
        </grid>
        <grid name="area6X" weightsX="0,1,0" weightsY="1">
            <alias ref="-area6L"/>
            <alias ref="-area6F"/>
            <alias ref="-area6R"/>
        </grid>

        <grid name="outlineL" weightsX="0,1,0" weightsY="1">
            <alias ref="-outlineL"/>
            <alias ref="-outlineF"/>
            <alias ref="-outlineCR"/>
        </grid>
        <grid name="outlineC" weightsX="0,1,0" weightsY="1">
            <alias ref="-outlineCL"/>
            <alias ref="-outlineF"/>
            <alias ref="-outlineCR"/>
        </grid>
        <grid name="outlineR" weightsX="0,1,0" weightsY="1">
            <alias ref="-outlineCL"/>
            <alias ref="-outlineF"/>
            <alias ref="-outlineR"/>
        </grid>
        <grid name="outlineX" weightsX="0,1,0" weightsY="1">
            <alias ref="-outlineL"/>
            <alias ref="-outlineF"/>
            <alias ref="-outlineR"/>
        </grid>

        <alias name="-selectionL" ref="outlineL" tint="#cc0" if="keyboardFocus"/>
        <alias name="-selectionC" ref="outlineC" tint="#cc0" if="keyboardFocus"/>
        <alias name="-selectionR" ref="outlineR" tint="#cc0" if="keyboardFocus"/>
        <alias name="-selectionX" ref="outlineX" tint="#cc0" if="keyboardFocus"/>

        <select name="radiobuttonL.background">
            <alias ref="area6L" if="selected + armed"/>
            <alias ref="area5L" if="selected + hover"/>
            <alias ref="area4L" if="selected"/>
            <alias ref="area3L" if="armed"/>
            <alias ref="area2L" if="hover"/>
            <alias ref="area1L"/>
        </select>
        <select name="radiobuttonC.background">
            <alias ref="area6C" if="selected + armed"/>
            <alias ref="area5C" if="selected + hover"/>
            <alias ref="area4C" if="selected"/>
            <alias ref="area3C" if="armed"/>
            <alias ref="area2C" if="hover"/>
            <alias ref="area1C"/>
        </select>
        <select name="radiobuttonR.background">
            <alias ref="area6R" if="selected + armed"/>
            <alias ref="area5R" if="selected + hover"/>
            <alias ref="area4R" if="selected"/>
            <alias ref="area3R" if="armed"/>
            <alias ref="area2R" if="hover"/>
            <alias ref="area1R"/>
        </select>
        <select name="radiobuttonX.background">
            <alias ref="area6X" if="selected + armed"/>
            <alias ref="area5X" if="selected + hover"/>
            <alias ref="area4X" if="selected"/>
            <alias ref="area3X" if="armed"/>
            <alias ref="area2X" if="hover"/>
            <alias ref="area1X"/>
        </select>

        <select name="radiobutton.background" border="4,1">
            <alias ref="radiobuttonX.background" if="radiobuttonFirst + radiobuttonLast"/>
            <alias ref="radiobuttonL.background" if="radiobuttonFirst"/>
            <alias ref="radiobuttonR.background" if="radiobuttonLast"/>
            <alias ref="radiobuttonC.background"/>
        </select>
        <select name="radiobutton.overlay">
            <alias ref="-selectionX" if="radiobuttonFirst + radiobuttonLast"/>
            <alias ref="-selectionL" if="radiobuttonFirst"/>
            <alias ref="-selectionR" if="radiobuttonLast"/>
            <alias ref="-selectionC"/>
        </select>

        <alias name="togglebutton.background" ref="radiobuttonX.background" border="4,1"/>
        <alias name="togglebutton.overlay" ref="-selectionX"/>

        <texture name="-icon.combobox" x="10" y="19" width="6" height="7" center="true"/>
        <select name="combobox.background">
            <alias ref="area3X" if="armed"/>
            <alias ref="area2X" if="hover"/>
            <alias ref="area1X"/>
        </select>
        <select name="combobox.button.background">
            <alias ref="-icon.combobox" inset="1,1,-1,-1" if="armed"/>
            <alias ref="-icon.combobox"/>
        </select>
        <alias name="combobox.display.background" ref="none"/>
        <alias name="combobox.overlay" ref="-selectionX"/>

        <grid name="collapsiblepanel.background" weightsX="1" weightsY="1,0" border="0,0,5,0">
            <alias ref="none"/>
            <alias ref="panel.separator"/>
        </grid>

        <select name="collapsiblepanel.arrow.background" center="true">
            <texture x="26" y="19" width="8" height="8" unless="expanded"/>
            <texture x="17" y="19" width="8" height="8"/>
        </select>
    </textures>

    <fontDef name="button-font" filename="font.fnt" color="white">
        <fontParam if="disabled" color="#ccc"/>
        <fontParam if="selected" color="black"/>
    </fontDef>

    <theme name="radiobutton" ref="-defaults" allowWildcard="true">
        <param name=""><image>radiobutton.*</image></param>
        <param name="border"><border>background.border</border></param>
        <param name="textAlignment"><enum type="alignment">center</enum></param>
        <param name="font"><font>button-font</font></param>
        <param name="minWidth"><int>20</int></param>
    </theme>

    <theme name="togglebutton" ref="radiobutton" allowWildcard="true">
        <param name=""><image>togglebutton.*</image></param>
        <param name="border"><border>background.border</border></param>
    </theme>

    <theme name="combobox" ref="-defaults" allowWildcard="true">
        <param name=""><image>combobox.*</image></param>
        <theme name="display" ref="label">
            <param name=""><image>combobox.display.*</image></param>
            <param name="border"><border>3,1</border></param>
            <param name="minWidth"><int>50</int></param>
            <param name="textAlignment"><enum type="alignment">left</enum></param>
            <param name="font"><fontDef filename="font.fnt" color="white">
                <fontParam if="hasOpenPopups" color="#aaa"/>
            </fontDef></param>
        </theme>
        <theme name="button" ref="-defaults">
            <param name=""><image>combobox.button.*</image></param>
            <param name="minWidth"><int>18</int></param>
        </theme>
        <param name="minHeight"><int>18</int></param>
    </theme>

    <theme name="elementTree" ref="scrollpane">
        <param name="background"><image>-borderC</image></param>
        <param name="border"><border>background.border</border></param>
        <theme name="treetable" ref="table"/>
    </theme>

    <theme name="propertyEditor" ref="scrollpane">
        <param name=""><image>panel.*</image></param>
        <param name="border"><border>background.border</border></param>

        <theme name="propertypanel" ref="dialoglayout">
            <param name="border"><border>5</border></param>

            <theme name="collapsiblepanel" ref="dialoglayout">
                <param name=""><image>collapsiblepanel.*</image></param>
                <param name="border"><border>background.border</border></param>
                <theme name="arrow" ref="-defaults">
                    <param name=""><image>collapsiblepanel.arrow.*</image></param>
                </theme>
                <theme name="title" ref="label"/>
                <theme name="active" ref="checkbox"/>

                <theme name="contentcontainer" ref="-defaults">
                    <theme name="" ref="*"/>
                    <theme name="boolean" ref="togglebutton"/>
                    <theme name="colorselector" ref="colorselector">
                        <theme name="colorarea1d" merge="true">
                            <param name="background"><image>-borderC</image></param>
                            <param name="border"><border>2</border></param>
                        </theme>
                        <theme name="colorarea2d" merge="true">
                            <param name="background"><image>-borderC</image></param>
                            <param name="border"><border>2</border></param>
                        </theme>
                    </theme>

                    <theme name="conditioneditor" ref="dialoglayout">
                        <theme name="condition-none" ref="radiobutton">
                            <param name="text"><string>None</string></param>
                        </theme>
                        <theme name="condition-if" ref="radiobutton">
                            <param name="text"><string>If</string></param>
                        </theme>
                        <theme name="condition-unless" ref="radiobutton">
                            <param name="text"><string>Unless</string></param>
                        </theme>
                        <theme name="" ref="*"/>
                        <param name="namedGaps"><map>
                            <param name="radiobutton"><gap>0</gap></param>
                        </map></param>
                    </theme>

                    <theme name="recteditor" ref="dialoglayout">
                        <theme name="" ref="*"/>
                    </theme>
                </theme>
            </theme>
        </theme>
    </theme>

    <theme name="previewwidget" ref="-defaults">
<!--        <param name="mouseCursor"><cursor>cursor.none</cursor></param> -->
    </theme>

</themes>